<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="view_form_sale_order_inherit" model="ir.ui.view">
        <field name="name">axiom_is_customer_is_vendor view_form_sale_order_inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
        
            <xpath expr="//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[('is_customer','=', True)]</attribute>
            </xpath>
            <xpath expr="//field[@name='partner_id']" position="before">
            <field name="tin_id" domain="[('partner_id.is_customer','=', True)]" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>



    <record id="view_stock_picking_form_inherit_tin" model="ir.ui.view">
        <field name="name">stock.picking.form.inherit.tin</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@class='o_td_label']" position="before">
                <field name="tin_id" options="{'no_create': True}"/>
                       
            </xpath>
        </field>
    </record>



     <record id="view_account_payment_form_inherit_tin" model="ir.ui.view">
        <field name="name">account.payment.form.inherit.tin</field>
        <field name="model">account.payment</field>
        <field name="inherit_id" ref="account.view_account_payment_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="before">
                
                <field name="tin_id" options="{'no_create': True}" domain="[('partner_id.is_customer', '=', True), '|', '|', ('partner_id.company_id','=', company_id), ('partner_id.company_id', '=', False), ('partner_id.company_id', 'child_of', company_id)] if payment_type in ('inbound') else [('partner_id.is_vendor', '=', True), '|', '|', ('partner_id.company_id','=', company_id), ('partner_id.company_id', '=', False), ('partner_id.company_id', 'child_of', company_id)]"/>
            </xpath>

        </field>
    </record>


  
</odoo>
