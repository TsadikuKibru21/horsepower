<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Modify Account Move Line Tree View -->
    <record id="account_move_line_tree_view_inherit" model="ir.ui.view">
        <field name="name">account.move.tree.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
                <field name="order_sequence"/>
            </xpath>

             <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='product_id']" position="before">
                        <field name="default_code" options="{'no_create': True}"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree//field[@name='product_id']" position="attributes">
                        <attribute name="readonly">1</attribute>
                </xpath>
              <xpath expr="//header" position="inside">
                     <field name="is_checked" invisible="1"/>
                    <button name="action_check" type="object" string="Check" class="btn-primary" groups="account.group_account_invoice" invisible="state != 'draft' or is_checked == True" confirm="Are You Want TO Check?"/>

            </xpath>

            <xpath expr="(//header/button[@name='action_post'])[2]" position="attributes">
                    <attribute name="string">Approve</attribute>
                    <attribute name="invisible">hide_post_button or move_type == 'entry' or display_inactive_currency_warning or not is_checked</attribute>
                </xpath>
            <xpath expr="//field[@name='name']" position="before">

                <widget name="web_ribbon" title="Checked" bg_color="text-bg-success" invisible="is_checked == False or state != 'draft'"/>
            </xpath>

             <xpath expr="//header//button[@name='button_draft']" position="attributes">
                <attribute name="groups">custom_sales_warehouse.group_account_reset_to_draft</attribute>
            </xpath>

             <xpath expr="//header/button[@name='%(account.action_view_account_move_reversal)d']" position="attributes">
                    <attribute name="groups">custom_sales_warehouse.group_account_reverse_entry</attribute>
            </xpath>
           
        </field>
    </record>

    <record id="account_view_tax_group_tree_inherit" model="ir.ui.view">
        <field name="name">account.tax.group.tree.inherit</field>
        <field name="model">account.tax.group</field>
        <field name="inherit_id" ref="account.view_tax_group_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='advance_tax_payment_account_id']" position="after">
                <field name="is_closing_required"/>
            </xpath>

         
           
        </field>
    </record>



    <menuitem id="menu_order_to_invoice_accounting"
              name="Orders to Invoice"
              parent="account.menu_finance_receivables"   
              sequence="50"
              action="sale.action_orders_to_invoice"  
              groups="account.group_account_manager"/> 

   
</odoo>