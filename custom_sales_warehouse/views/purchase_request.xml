<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Inherit the tree view -->
    <record id="view_purchase_request_form_inherit" model="ir.ui.view">
        <field name="name">purchase.request.tree.inherit.disable.create</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="store_request.view_purchase_request_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//group//group//field[@name='purchase_type']" position="attributes">

                    <attribute name="invisible">1</attribute>

            </xpath>
             <xpath expr="//field[@name='requested_date']" position="after">
                <field name="sale_order" readonly="1"/>
            </xpath>
            <xpath expr="//field[@name='requested_date']" position="attributes">
                <attribute name="invisible">sale_order</attribute>

            </xpath>
            <xpath expr="//field[@name='requested_by']" position="attributes">
                    <attribute name="invisible">sale_order</attribute>

            </xpath>
              <xpath expr="//field[@name='requested_date']" position="after">
                    <field name="project"/>
            </xpath>
            
        </field>
    </record>
</odoo>