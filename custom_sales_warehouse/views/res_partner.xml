<?xml version="1.0" encoding="utf-8"?>
<odoo>
   

   <record id="view_res_partner_form_inherit_tin" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.tin</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="string">TIN</attribute>
            </xpath>
             <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="readonly">is_contact_manager_user == False</attribute>
            </xpath>
            <xpath expr="//field[@name='company_type']" position="attributes">
                <attribute name="readonly">is_contact_manager_user == False</attribute>
            </xpath>
            <xpath expr="//field[@name='vat']" position="attributes">
                <attribute name="readonly">is_contact_manager_user == False</attribute>
                
            </xpath>

            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="readonly">is_contact_manager_user == False</attribute>
                
            </xpath>
            <xpath expr="//field[@name='company_id']" position="attributes">
                <attribute name="readonly">is_contact_manager_user == False</attribute>
            </xpath>
            <!-- Add new fields to the form -->
            <xpath expr="//field[@name='company_id']" position="after">
                <field name="is_contact_manager_user" invisible="1"/>
            </xpath>

        </field>
    </record>
</odoo>