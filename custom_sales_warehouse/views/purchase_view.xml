<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Inherit the tree view -->
    <record id="view_purchase_order_tree_inherit_disable_create" model="ir.ui.view">
        <field name="name">purchase.order.tree.inherit.disable.create</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <tree position="attributes">
                <attribute name="create">0</attribute>
            </tree>
        </field>
    </record>

    <!-- Inherit the form view -->
    <record id="view_purchase_order_form_inherit_disable_create" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.disable.create</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <form position="attributes">
                <attribute name="create">0</attribute>
            </form>
             <xpath expr="(//button[@name='button_confirm'])[1]" position="attributes">
                            <attribute name="invisible">state != 'draft'</attribute>
                </xpath>
                 <xpath expr="(//button[@name='button_confirm'])[2]" position="attributes">
                        <attribute name="invisible">state != 'sent'</attribute>
                </xpath>
              
        </field>
    </record>

</odoo>
