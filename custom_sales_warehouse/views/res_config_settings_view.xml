<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_res_config_settings_inherit_quotation_print_limit" model="ir.ui.view">
        <field name="name">res.config.settings.inherit.quotation_print_limit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
               <xpath expr="//div[@id='sales']/div[@class='app_settings_block']" position="inside">
                <div class="row mt16 o_setting_box">
                    <div class="o_setting_left_pane"/>
                    <div class="o_setting_right_pane">
                        <label for="quotation_print_limit" string="Quotation Amount Limit To Print without Approve"/>
                        <div class="content-group">
                            <field name="quotation_print_limit"/>
                        </div>
                    </div>
                </div>
            </xpath>

        </field>
    </record>
</odoo>