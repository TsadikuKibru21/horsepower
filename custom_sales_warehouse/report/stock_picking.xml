<odoo>
    <template id="report_deliveryslip_document_inherit_signature" inherit_id="stock.report_delivery_document">

      <xpath expr="//div[@class='page']" position="inside">
            <div class="row mt48">
                <table class="table table-borderless" style="width:100%; margin-top:50px;">
                    <tr>
                        <td style="width:33%; text-align:center;">
                            <strong>Prepared By</strong>
                            <br/><br/><br/>
                            ______________________
                        </td>
                        <td style="width:33%; text-align:center;">
                            <strong>Approved By</strong>
                            <br/><br/><br/>
                            ______________________
                        </td>
                        <td style="width:33%; text-align:center;">
                            <strong>Received By</strong>
                            <br/><br/><br/>
                            ______________________
                        </td>
                    </tr>
                </table>
            </div>
        </xpath>
    </template>

       <template id="report_picking_inherit" inherit_id="stock.report_picking">

        <!-- ✅ Always show From & To columns -->
        <xpath expr="//th[@name='th_from']" position="attributes">
            <attribute name="t-if">True</attribute>
        </xpath>
        <xpath expr="//th[@name='th_to']" position="attributes">
            <attribute name="t-if">True</attribute>
        </xpath>

        <xpath expr="//td[@groups='stock.group_stock_multi_locations'][span[@t-esc='ml.location_id.display_name']]" position="attributes">
            <attribute name="t-if">True</attribute>
        </xpath>
        <xpath expr="//td[@groups='stock.group_stock_multi_locations'][div/span[@t-field='ml.location_dest_id']]" position="attributes">
            <attribute name="t-if">True</attribute>
        </xpath>

        <!-- ✅ Add “Item Code” before Product -->
        <xpath expr="//th[@name='th_product']" position="before">
            <th name="th_item_code">
                <strong>Item Code</strong>
            </th>
        </xpath>

        <xpath expr="//td[span[@t-field='ml.product_id.display_name']]" position="before">
            <td name="td_item_code">
                <span t-field="ml.default_code.default_code or ''"/>
            </td>
        </xpath>

    </template>
</odoo>
