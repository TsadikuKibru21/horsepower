<odoo>
    <!-- Creator Group -->
    <record id="group_sale_order_creator" model="res.groups">
        <field name="name">Sale Order Creator</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>

    </record>

    <!-- Approver Group -->
    <record id="group_sale_order_approver" model="res.groups">
        <field name="name">Sale Order Approver</field>
        <field name="category_id" ref="base.module_category_sales_sales"/>
        <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
    </record>
    <record id="sale_order_creator_rule" model="ir.rule">
        <field name="name">Sale Order: Creator can only see draft</field>
        <field name="model_id" ref="sale.model_sale_order"/>
        <field name="domain_force">[('state', 'in', ['draft', 'to_approve'])]</field>
        <field name="groups" eval="[(4, ref('custom_sales_warehouse.group_sale_order_creator'))]"/>
    </record>


   <record id="group_contact_manager" model="res.groups">
        <field name="name">Contact/Partner Manager</field>
        <!-- <field name="category_id" ref="base.module_category_hidden"/> -->
    </record>

     <record id="group_product_manager" model="res.groups">
            <field name="name">Product Manager/Creator</field>
        </record>
    <record id="group_sale_cost_admin" model="res.groups">
            <field name="name">Sale Cost Admin</field>
        </record>
</odoo>
