<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Payment Order Form View -->

        <record id="view_payment_order_tree" model="ir.ui.view">
            <field name="name">payment.order.tree</field>
            <field name="model">payment.order</field>
            <field name="arch" type="xml">
                <tree string="Payment Orders">
                    <field name="name" string="Order Reference"/>
                    <field name="source_from" string="Source"/>
                    <field name="purchase_ref" string="Purchase Reference"/>
                    <field name="other_ref" string="Other Reference" />
                    <field name="location" string="Location"/>
                    <field name="date" string="Date"/>
                    <field name="pay_to" string="Pay To"/>
                    <field name="amount" string="Amount"/>
                    <field name="amount_in_words" string="Amount in Words"/>
                    <field name="purpose" string="Purpose"/>
                    <field name="state" string="Status"/>
                </tree>
            </field>
        </record>
        <record id="view_payment_order_form" model="ir.ui.view">
            <field name="name">payment.order.form</field>
            <field name="model">payment.order</field>
            <field name="arch" type="xml">
                <form string="Payment Order">
                <header>
                        <button name="action_prepare" invisible="state != 'draft'" string="Prepare" type="object" groups="payment_order_and_cpv.group_payment_order_prepare"/>
                        <button name="action_check" invisible="state != 'prepared'"  string="Check" type="object" groups="payment_order_and_cpv.group_payment_order_check"/>
                        <button name="action_approve" invisible="state != 'checked'"  string="Approve" type="object" groups="payment_order_and_cpv.group_payment_order_approve"/>
                        <button name="action_create_cpv" invisible="state != 'approved'" string="Create CPV" type="object" confirm="Are you sure want to create CPV?" groups="payment_order_and_cpv.group_payment_order_approve"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,prepared,checked,approved,cpv_created"/>
                </header>
                <sheet>
                 <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_cpv" string="CPV" class="oe_stat_button" icon="fa-history">
                            <field name="cpv_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                        <group>
                            <field name="can_edit_approver" invisible="1"/>

                            <field name="name" readonly="1"/>
                            <field name="source_from" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="purchase_ref" invisible="source_from != 'purchase' or (state == 'approved' and can_edit_approver == False)"/>
                            <field name="other_ref" invisible="source_from != 'other' or (state == 'approved' and can_edit_approver == False)"/>
                            
                            <field name="location" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="date" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="pay_to" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="amount" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="amount_in_words"/>
                            <field name="purpose" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="activity_code" invisible="state == 'approved' and can_edit_approver == False"/>
                        </group>

                        <group>
                          
                            <field name="source_fund" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="account" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="budget_for" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="actual_used" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="remaining_balance" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="budget_forward" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="ref_no_crv" invisible="state == 'approved' and can_edit_approver == False"/>
                        </group>
                            
                    </group>
                    <group>
                            <group>
                                    <field name="prepared_by" readonly="1"/>
                                    <field name="prepared_date" readonly="1"/>
                            </group>

                            <group>
                                    <field name="checked_by" readonly="1"/>
                                    <field name="checked_date" readonly="1"/>
                            </group>
                            <group>
                                    <field name="approved_by" readonly="1"/>
                                    <field name="approved_date" readonly="1"/>
                            </group>

                    </group>
                 </sheet>
                  <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>



        <record id="view_cheque_payment_voucher_tree" model="ir.ui.view">
            <field name="name">cheque.payment.voucher.tree</field>
            <field name="model">cheque.payment.voucher</field>
            <field name="arch" type="xml">
                <tree string="Cheque Payment Vouchers">
                    <field name="name" string="Voucher Reference"/>
                    <field name="payment_order_id" string="Payment Order"/>
                    <field name="location" string="Location"/>
                    <field name="date" string="Date"/>
                    <field name="pay_to" string="Pay To"/>
                    <field name="amount" string="Amount"/>
                    <field name="cheque_no" string="Cheque Number"/>
                    <field name="bank_acc_no" string="Bank Account Number"/>
                    <field name="pad_no" string="Pad Number"/>
                    <field name="purpose" string="Purpose"/>
                    <field name="state" string="Status"/>
        
                </tree>
            </field>
        </record>
        <!-- Cheque Payment Voucher Form View -->
        <record id="view_cheque_payment_voucher_form" model="ir.ui.view">
            <field name="name">cheque.payment.voucher.form</field>
            <field name="model">cheque.payment.voucher</field>
            <field name="arch" type="xml">
                <form string="Cheque Payment Voucher">
                 <header>
                        <button name="action_prepare" invisible="state != 'draft'" string="Prepare" type="object" groups="payment_order_and_cpv.group_cpv_prepare"/>
                        <button name="action_check" invisible="state != 'prepared'"  string="Check" type="object" groups="payment_order_and_cpv.group_cpv_check"/>
                        <button name="action_approve" invisible="state != 'checked'"  string="Approve" type="object" groups="payment_order_and_cpv.group_cpv_approve"/>
                        <button name="action_create_journal_entry" invisible="state != 'approved'" confirm="Are you sure want to create Journal Entry?" string="Create Journal Entry" type="object" groups="payment_order_and_cpv.group_cpv_approve"/>

                        <field name="state" widget="statusbar" statusbar_visible="draft,prepared,checked,approved,journal_entry_created"/>
                </header>
                <sheet>
                <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_journal" string="Journal" class="oe_stat_button" icon="fa-history">
                            <field name="journal_count" widget="statinfo"/>
                        </button>
                    </div>
                    <group>
                    <group>
                        <field name="can_edit_approver" invisible="1"/>

                        <field name="name" readonly="1"/>

                        <field name="payment_order_id" invisible="state == 'approved' and can_edit_approver == False"/>
                        <field name="location" invisible="state == 'approved' and can_edit_approver == False"/>
                        <field name="date" invisible="state == 'approved' and can_edit_approver == False"/>
                        <field name="pay_to" invisible="state == 'approved' and can_edit_approver == False"/>
                        <field name="amount" invisible="state == 'approved' and can_edit_approver == False"/>
                        <field name="amount_in_words" invisible="state == 'approved' and can_edit_approver == False"/>
                    </group>

                     <group>
                        
                            <field name="n_o" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="purpose" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="cheque_no" invisible="state == 'approved' and can_edit_approver == False"/>
                            <field name="bank_acc_no" invisible="state == 'approved' and can_edit_approver == False"/>
                            <!-- <field name="pad_no" invisible="state == 'approved' and can_edit_approver == False"/> -->

                    </group>
                       

                    </group>
                     <notebook>
                        <page string="Lines">
                            <field name="line_ids" readonly="1">
                                <tree editable="bottom">
                                    <field name="account_no"/>
                                    <field name="description"/>
                                    <field name="debit"/>
                                    <field name="credit"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                    <group>
                            <group>
                                    <field name="prepared_by" readonly="1"/>
                                    <field name="prepared_date" readonly="1"/>
                            </group>

                            <group>
                                    <field name="checked_by" readonly="1"/>
                                    <field name="checked_date" readonly="1"/>
                            </group>
                            <group>
                                    <field name="approved_by" readonly="1"/>
                                    <field name="approved_date" readonly="1"/>
                            </group>
                    </group>
                </sheet>
                  <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
                </form>
            </field>
        </record>

        <!-- Actions -->
        <record id="action_payment_order" model="ir.actions.act_window">
            <field name="name">Payment Orders</field>
            <field name="res_model">payment.order</field>
            <field name="view_mode">tree,form</field>
        </record>
        <record id="action_cheque_payment_voucher" model="ir.actions.act_window">
            <field name="name">Cheque Payment Vouchers</field>
            <field name="res_model">cheque.payment.voucher</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menu Items -->
        <menuitem id="menu_payment_order" name="Payment Orders" parent="account.menu_finance_payables" sequence="-100" action="action_payment_order"/>
        <menuitem id="menu_cheque_payment_voucher" name="Cheque Payment Vouchers" parent="account.menu_finance_payables" sequence="-99" action="action_cheque_payment_voucher"/>
    </data>
</odoo>