<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- QWeb Report Template for Payment Order -->
    <template id="payment_order_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 style="text-align: center">Payment Order</h2>
                    
                    <t t-set="doc" t-value="docs[0]"/>

                    <!-- Payment Order Details -->
                    <div class="row mb-3">
                        <div class="col-6">
                            <p><strong class="me-1">Order Reference:</strong> <span t-field="doc.name"/></p>
                            <p><strong class="me-1">Source:</strong> <span t-field="doc.source_from"/></p>
                            <t t-if="doc.source_from == 'purchase'">
                                <p><strong class="me-1">Purchase Reference:</strong> <span t-field="doc.purchase_ref"/></p>
                            </t>
                            <t t-if="doc.source_from == 'other'">
                                <p><strong class="me-1">Other Reference:</strong> <span t-field="doc.other_ref"/></p>
                            </t>
                            <p><strong class="me-1">Location:</strong> <span t-field="doc.location"/></p>
                            <p><strong class="me-1">Date:</strong> <span t-field="doc.date" t-options='{"widget": "date"}'/></p>
                        </div>
                        <div class="col-6">
                            <p><strong class="me-1">Amount:</strong> <span t-field="doc.amount"/></p>
                            <p><strong class="me-1">Amount in Words:</strong> <span t-field="doc.amount_in_words"/></p>
                            <p><strong class="me-1">Purpose:</strong> <span t-field="doc.purpose"/></p>
                            <p><strong class="me-1">Activity Code:</strong> <span t-field="doc.activity_code"/></p>
                            <p><strong class="me-1">Pay To:</strong> <span t-field="doc.pay_to.name"/></p>

                        </div>
                    </div>

                    <!-- Budget Information -->
                    <h4 class="mt-4 mb-2">Budget Information</h4>
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>Source Fund</th>
                                <th>Account</th>
                                <th>Budget For</th>
                                <th>Actual Used</th>
                                <th>Remaining Balance</th>
                                <th>Budget Forward</th>
                                <th>CRV Reference</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><span t-field="doc.source_fund"/></td>
                                <td><span t-field="doc.account"/></td>
                                <td><span t-field="doc.budget_for"/></td>
                                <td><span t-field="doc.actual_used"/></td>
                                <td><span t-field="doc.remaining_balance"/></td>
                                <td><span t-field="doc.budget_forward"/></td>
                                <td><span t-field="doc.ref_no_crv"/></td>
                            </tr>
                        </tbody>
                    </table>

                    <!-- Approval Information in 3 columns -->
                    <div class="row mt-3">
                        <div class="col-4">
                            <p><strong class="me-1">Prepared By:</strong> <span t-field="doc.prepared_by"/></p>
                            <p><strong class="me-1">Prepared Date:</strong> <span t-field="doc.prepared_date" t-options='{"widget": "date"}'/></p>
                        </div>
                        <div class="col-4">
                            <p><strong class="me-1">Checked By:</strong> <span t-field="doc.checked_by"/></p>
                            <p><strong class="me-1">Checked Date:</strong> <span t-field="doc.checked_date" t-options='{"widget": "date"}'/></p>
                        </div>
                        <div class="col-4">
                            <p><strong class="me-1">Approved By:</strong> <span t-field="doc.approved_by"/></p>
                            <p><strong class="me-1">Approved Date:</strong> <span t-field="doc.approved_date" t-options='{"widget": "date"}'/></p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_payment_order" model="ir.actions.report">
        <field name="name">Payment Order Report</field>
        <field name="model">payment.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">payment_order_and_cpv.payment_order_report_template</field>
        <field name="report_file">payment_order_and_cpv.payment_order_report_template</field>
        <field name="binding_model_id" ref="model_payment_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>