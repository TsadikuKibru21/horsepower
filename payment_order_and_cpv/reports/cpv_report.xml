<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- QWeb Report Template for Cheque Payment Voucher -->
    <template id="cheque_payment_voucher_report_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 style="text-align: center">Cheque Payment Voucher</h2>
                    
                    <t t-set="doc" t-value="docs[0]"/>

                    <!-- Cheque Payment Voucher Details -->
                    <div class="row mb-3">
                        <div class="col-6">
                            <p><strong class="me-1">Voucher Reference:</strong> <span t-field="doc.name"/></p>
                            <p><strong class="me-1">Payment Order:</strong> <span t-field="doc.payment_order_id"/></p>
                            <p><strong class="me-1">Location:</strong> <span t-field="doc.location"/></p>
                            <p><strong class="me-1">Date:</strong> <span t-field="doc.date" t-options='{"widget": "date"}'/></p>
                            <p><strong class="me-1">Pay To:</strong> <span t-field="doc.pay_to.name"/></p>
                            <p><strong class="me-1">Cheque Number:</strong> <span t-field="doc.cheque_no"/></p>

                        </div>
                        <div class="col-6">
                            <!-- <p><strong class="me-1">Pad Number:</strong> <span t-field="doc.pad_no"/></p> -->

                            <p><strong class="me-1">Amount:</strong> <span t-field="doc.amount"/></p>
                            <p><strong class="me-1">Amount in Words:</strong> <span t-field="doc.amount_in_words"/></p>
                            <p><strong class="me-1">Purpose:</strong> <span t-field="doc.purpose"/></p>
                            <p><strong class="me-1">Bank Account Number:</strong> <span t-field="doc.bank_acc_no"/></p>
                        </div>
                    </div>

                    <!-- Lines Table -->
                    <table class="table table-bordered mt-3">
                        <thead>
                            <tr>
                                <th>Account No</th>
                                <th>Description</th>
                                <th>Debit</th>
                                <th>Credit</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="doc.line_ids" t-as="line">
                                <tr>
                                    <td><span t-field="line.account_no"/></td>
                                    <td><span t-field="line.description"/></td>
                                    <td><span t-field="line.debit"/></td>
                                    <td><span t-field="line.credit"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>

                    <!-- Approval Information in 3 columns -->
                    <div class="row mt-3">
                        <div class="col-4">
                            <p><strong class="me-1">Prepared By:</strong> <span t-field="doc.prepared_by"/></p>
                            <p><strong class="me-1">Prepared Date:</strong> <span t-field="doc.prepared_date" t-options='{"widget": "date"}'/></p>
                        </div>
                        <div class="col-4">
                            <p><strong class="me-1">Checked By:</strong> <span t-field="doc.checked_by"/></p>
                            <p><strong class="me-1">Checked Date:</strong> <span t-field="doc.checked_date" t-options='{"widget": "date"}'/></p>
                        </div>
                        <div class="col-4">
                            <p><strong class="me-1">Approved By:</strong> <span t-field="doc.approved_by"/></p>
                            <p><strong class="me-1">Approved Date:</strong> <span t-field="doc.approved_date" t-options='{"widget": "date"}'/></p>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_report_cheque_payment_voucher" model="ir.actions.report">
        <field name="name">Cheque Payment Voucher Report</field>
        <field name="model">cheque.payment.voucher</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">payment_order_and_cpv.cheque_payment_voucher_report_template</field>
        <field name="report_file">payment_order_and_cpv.cheque_payment_voucher_report_template</field>
        <field name="binding_model_id" ref="model_cheque_payment_voucher"/>
        <field name="binding_type">report</field>
    </record>
</odoo>