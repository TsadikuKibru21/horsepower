<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

      

        <record id="store_request_category" model="ir.module.category">
            <field name="name">Store Issue</field>
            <field name="description">Helps your store issue management</field>
            <field name="sequence">10</field>
        </record>

        <!-- Submitter Group -->
        <record id="group_submitter" model="res.groups">
            <field name="name">Submitter</field>
            <field name="category_id" ref="store_request_category"/>
        </record>

        <!-- Validator Group -->
        <record id="group_validator" model="res.groups">
            <field name="name">Validator</field>
            <field name="category_id" ref="store_request_category"/>
        </record>



        
    </data>
</odoo>