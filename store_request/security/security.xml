        <!-- Define a new category for Purchase Management -->
        <record id="module_category_purchase_management" model="ir.module.category">
            <field name="name">Purchase Management</field>
            <field name="sequence" eval="11"/> 
        </record>
        
        <!-- Store Manager Group -->
        <record id="group_purchase_prepare" model="res.groups">
            <field name="name">Prepare</field>
            <field name="category_id" ref="module_category_purchase_management"/>
        </record>

         <record id="group_purchase_confirm" model="res.groups">
            <field name="name">Confirm</field>
            <field name="category_id" ref="module_category_purchase_management"/>
        </record>

        <!-- Purchase Manager Group -->
        <record id="group_purchase_approve" model="res.groups">
            <field name="name">Approve</field>
            <field name="category_id" ref="module_category_purchase_management"/>
        </record>
        

    </data>

</odoo>
