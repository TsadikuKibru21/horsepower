<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- QWeb Template for Monthly Inventory Report -->
       <template id="report_monthly_inventory">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="web.external_layout">
            <div class="page">
                <h2 class="text-center mb-3">Monthly Inventory Report</h2>
                <p><strong>From:</strong> <span t-esc="doc.start_date.strftime('%Y-%m-%d')"/></p>
                <p><strong>To:</strong> <span t-esc="doc.end_date.strftime('%Y-%m-%d')"/></p>
                <p><strong>Operation Types:</strong> <span t-esc="', '.join(doc.operation_type.mapped('name')) or 'All'"/></p>
                <table class="table table-condensed">
                    <thead>
                        <tr>
                            <th>Reference</th>
                            <th>Date</th>
                            <th>Operation Type</th>
                            <th>Origin</th>
                            <th>State</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="doc.stock_pickings" t-as="picking">
                            <tr>
                                <td><span t-esc="picking.name"/></td>
                                <td><span t-esc="picking.date.strftime('%Y-%m-%d')"/></td>
                                <td><span t-esc="picking.picking_type_id.name"/></td>
                                <td><span t-esc="picking.origin or 'N/A'"/></td>
                                <td><span t-esc="picking.state"/></td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>   </t>
            
        </t>
    </template>

    <!-- Report Action -->
    <record id="action_monthly_inventory_report" model="ir.actions.report">
        <field name="name">Monthly Inventory Report</field>
        <field name="model">monthly.inventory.report</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">store_request.report_monthly_inventory</field>
        <field name="print_report_name">'Monthly Inventory Report ' + (object.start_date.strftime('%Y-%m-%d') + ' to ' + object.end_date.strftime('%Y-%m-%d'))</field>
        <field name="binding_model_id" ref="model_monthly_inventory_report"/>
        <field name="binding_type">report</field>
    </record>
</odoo>