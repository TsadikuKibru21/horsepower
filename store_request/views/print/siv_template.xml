<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    

    <!-- QWeb Template -->
    <template id="store_issue_voucher_template">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="voucher">
                <t t-call="web.external_layout">
                    <div class="page">
                        <!-- Header -->
                        <h2 class="text-center">Store Issue Voucher</h2>
                        <div class="row mt-4">
                            <div class="col-6">
                                <strong>Voucher Name:</strong> <span t-field="voucher.name"/>
                            </div>
                            <div class="col-6 text-right">
                                <strong>Effective Date:</strong> <span t-field="voucher.effective_date"/>
                            </div>
                        </div>
                        <hr/>

                        <!-- General Information -->
                        <div class="row">
                            <div class="col-6">
                                <strong>Warehouse:</strong> <span t-field="voucher.warehouse_id.name"/>
                                <br/>
                                <strong>Location:</strong> <span t-field="voucher.location_id.name"/>
                                <br/>
                                <strong>Destination Location:</strong> <span t-field="voucher.destination_location_id.name"/>
                            </div>
                            <div class="col-6">
                                <strong>Store Request:</strong> <span t-field="voucher.request_id.name"/>
                                <br/>
                                <strong>Equipment Request:</strong> <span t-field="voucher.eq_request_id.name"/>
                                <br/>
                                <strong>Is Equipment:</strong> <span t-field="voucher.is_equipment"/>
                            </div>
                        </div>
                        <hr/>

                        <!-- Voucher Lines Table -->
                        <h4>Voucher Lines</h4>
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>Product</th>
                                    <th>Quantity</th>
                                    <th>Unit of Measure</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-foreach="voucher.voucher_lines" t-as="line">
                                    <tr>
                                        <td><span t-field="line.product_id.name"/></td>
                                        <td><span t-field="line.quantity"/></td>
                                        <td><span t-field="line.uom.name"/></td>
                                      
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- Approval and Issued Details -->
                        <div class="row mt-4">
                            <div class="col-4">
                                <strong>Prepared By:</strong> <span t-field="voucher.issued_by.name"/>
                                <br/>
                                <strong>Prepared Date:</strong> <span t-field="voucher.issued_date"/>
                            </div>
                            <div class="col-4">
                                <strong>Approved By:</strong> <span t-field="voucher.approved_by.name"/>
                                <br/>
                                <strong>Approved Date:</strong> <span t-field="voucher.approved_date"/>
                            </div>
                            <div class="col-4">
                                <strong>Received By:</strong> <span t-field="voucher.recieved_by.name"/>
                                <br/>
                                <strong>Received Date:</strong> <span t-field="voucher.recieved_date"/>
                            </div>
                        </div>

                      
                    </div>
                </t>
            </t>
        </t>
    </template>
</odoo>