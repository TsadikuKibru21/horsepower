<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Action to open Purchase Request tree view -->
       
        <!-- Form view for Purchase Request -->
        <record id="view_purchase_request_form" model="ir.ui.view">
            <field name="name">purchase.request.form</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <form string="Purchase Request" create="0">
                    <header>
                        <button name="action_submit" groups="store_request.group_purchase_prepare"  invisible="state !='draft'" string="Submit" type="object" class="oe_highlight"/>
                        <button name="action_approve"  invisible="state !='confirmed'" groups="store_request.group_purchase_approve" string="Approve" type="object" class="oe_highlight" />

                        <button name="action_confirm"  invisible="state !='prepared'" groups="store_request.group_purchase_confirm" string="Confirm" type="object" class="oe_highlight" />
                        <button name="reset_draft" string="Reset To Draft" type="object" class="oe_highlight btn btn-warning fa fa-undo" 
                                              invisible="state in ['draft']  or purchase_order_count != 0" groups="store_request.group_purchase_approve"
                                       />
                      
                        <field name="state" widget="statusbar" statusbar_visible="draft,prepared,confirmed,approved"/>
                    </header>
                    <sheet>
                        <div name="button_box" class="oe_button_box">
                           
                            <button name="purchase_order_action" string="Purchase Orders" type="object" class="oe_stat_button" icon="fa-shopping-cart">
                                <field name="purchase_order_count" widget="statinfo"/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="effective_date" readonly="state == 'approved'"/>
                            </group>
                           
                        </group>
                        <notebook>
                            <page name="request_lines" string="Request Lines">
                                <field name="request_lines" readonly="state == 'approved'">
                                    <tree editable="bottom">
                                        <field name="vendor"/>
                                        <field name="product_id" readonly="parent.state not in  ['draft']"/>
                                        
                                        
                                        <field name="quantity" readonly="parent.state not in  ['draft']"/>
                                        <field name="uom_id" readonly="parent.state not in  ['draft']"/>

                                        <field name="unit_price" readonly="parent.state not in  ['draft']" />
                                        <field name="subtotal" string="Total Price" sum="Total Cost"/>
                                        <field name="remark"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                        <group col="3">
                            <group>
                                <field name="prepared_by" readonly="1"/>
                                <field name="prepared_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="checked_by" readonly="1"/>
                                <field name="checked_date" readonly="1"/>
                            </group>
                            <group>
                                <field name="approved_by" readonly="1"/>
                                <field name="approved_date" readonly="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <!-- Tree view for Purchase Request -->
        <record id="view_purchase_request_tree" model="ir.ui.view">
            <field name="name">purchase.request.tree</field>
            <field name="model">purchase.request</field>
            <field name="arch" type="xml">
                <tree string="Purchase Requests" create="1" decoration-info="state == 'draft'" decoration-warning="state == 'prepared'" decoration-success="state in ('approved','confirmed')">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>



         <record id="action_purchase_request" model="ir.actions.act_window">
            <field name="name">Purchase Requests</field>
            <field name="res_model">purchase.request</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create Purchase Requests from Store Requests</p>
            </field>
        </record>
        <!-- Menuitem for Purchase Requests -->
        <menuitem id="purchase_request_main_menu" name="Purchase Request" sequence="50" web_icon="store_request,static/img/pr.png" />
        <menuitem id="menu_purchase_request" groups="store_request.group_purchase_prepare,store_request.group_purchase_confirm,store_request.group_purchase_approve" name="Purchase Requests" parent="purchase_request_main_menu" action="action_purchase_request"/>
     
    </data>
</odoo>