<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_purchase_request_rfq">
    <t t-call="web.external_layout">
        <t t-foreach="docs" t-as="o">
            <!-- Fetch the current company -->
            <main>
                <div class="page">
                    <!-- Report Title -->
                    

                    <!-- Shipping Address -->
                    <div class="row mt-4">
                        <div class="col-6">
                            <strong>Shipping Address:</strong><br/>
                            <span t-field="o.tendor_location.name"/><br/>
                        
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-center">
                            <h2>Request For Quotation: <span t-field="o.name"/></h2>
                        </div>
                    </div>

                    <!-- Request Lines Table -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <table class="table table-bordered" style="width: 100%; border-collapse: separate; border-spacing: 5px;">
                                <thead>
                                    <tr>
                                        <th style="width: 40%; text-align: center;">Product</th>
                                        <th style="width: 30%; text-align: center;">Expected Date</th>
                                        <th style="width: 30%; text-align: center;">Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.request_lines" t-as="line">
                                        <tr>
                                            <td style="text-align: center;"><span t-field="line.product_id.name"/></td>
                                            <td style="text-align: center;"><span t-field="o.effective_date"/></td>
                                            <td style="text-align: center;"><span t-field="line.quantity"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </t>
    </t>
</template>
    <!-- Report Definition -->
    <record id="action_report_purchase_request_rfq" model="ir.actions.report">
        <field name="name">RFQ (Purchase Request)</field>
        <field name="model">purchase.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">store_request.report_purchase_request_rfq</field>
        <field name="print_report_name">'Purchase Request' + object.name</field>
        <field name="binding_model_id" ref="model_purchase_request"/>
        <field name="binding_type">report</field>
    </record>
</odoo>