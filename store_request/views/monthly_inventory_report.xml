<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="monthly_inventory_report_view_form" model="ir.ui.view">
        <field name="name">monthly.inventory.report.view.form</field>
        <field name="model">monthly.inventory.report</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                        <field name="start_date" />
                        <field name="end_date" />
                        <field name="operation_type" readonly="0" widget="many2many_tags" />

                    </group>
                    <notebook>
                        <page name="stock_pickings" string="Inventory Operations">
                            <field name="stock_pickings" readonly="1">
                             <tree>
                        <field name="date" />
                                <field name="name" />
                            <field name="picking_type_id" />
<field name="origin" />
                                <field name="state" />
                              

                             </tree>
                            </field>
                            
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="monthly_invenroty_report_view_tree" model="ir.ui.view">
        <field name="name">monthly.invenroty.report.view.tree</field>
        <field name="model">monthly.inventory.report</field>
        <field name="arch" type="xml">
            <tree string="">
                <field name="start_date" />
                <field name="end_date" />
            </tree>
        </field>
    </record>

<record id="monthly_inventory_action" model="ir.actions.act_window">
    <field name="name">Action Name</field>
    <field name="res_model">monthly.inventory.report</field>
    <field name="view_mode">tree,form</field>
    <field name="domain">[]</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        
        <p class="o_view_nocontent_smiling_face">
            Add a new record
            </p>
    </field>
</record>

<menuitem
    id="monthly_report_menu"
    name="Monthly Inventory Report"
    action="monthly_inventory_action"
    parent="stock.menu_warehouse_report"
    sequence="10"/>
</odoo>
