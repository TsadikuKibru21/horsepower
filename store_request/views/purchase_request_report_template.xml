<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_purchase_request_rfq">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <!-- Fetch the current company -->
                <t t-set="company" t-value="o.env.company"/>
                <div class="page">
                    <!-- Header -->
                    <div class="row">
                        <div class="col-12 text-center">
                           
                            <p><span t-field="company.street"/></p>
                            <t t-if="company.street2">
                                <p><span t-field="company.street2"/></p>
                            </t>
                            <p><span t-field="company.city"/> <span t-field="company.zip"/>, <span t-field="company.country_id.name"/></p>
                        </div>
                    </div>

                    <!-- Shipping Address -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <strong>Shipping address:</strong><br/>
                            <t t-set="shipping_address" t-value="company.partner_id"/>
                            <span t-field="shipping_address.name"/><br/>
                            <span t-field="shipping_address.street"/><br/>
                            <t t-if="shipping_address.street2">
                                <span t-field="shipping_address.street2"/><br/>
                            </t>
                            <span t-field="shipping_address.city"/> <span t-field="shipping_address.zip"/>, <span t-field="shipping_address.country_id.name"/>
                        </div>
                    </div>
                     <h4>Purchase Request: <span t-field="o.name"/></h4>

                    <!-- Request Lines Table -->
                    <div class="row mt-4">
                        <div class="col-12">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>Description</th>
                                        <th>Expected Date</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="o.request_lines" t-as="line">
                                        <tr>
                                            <td><span t-field="line.product_id.name"/></td>
                                            <td><span t-field="o.effective_date"/></td>
                                            <td><span t-field="line.quantity"/></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>

    <!-- Report Definition -->
    <record id="action_report_purchase_request_rfq" model="ir.actions.report">
        <field name="name">RFQ (Purchase Request)</field>
        <field name="model">purchase.request</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">store_request.report_purchase_request_rfq</field>
        <field name="print_report_name">'Purchase Request' + object.name</field>
        <field name="binding_model_id" ref="model_purchase_request"/>
        <field name="binding_type">report</field>
    </record>
</odoo>