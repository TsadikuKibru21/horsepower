<odoo>
    <record id="view_order_form_inherit_sales_type" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sales.type</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
          
            
            
             <xpath expr="//field[@name='sale_order_template_id']" position="after">
                <field name="sale_type" required="1" readonly="state in ['sale','done']"/>
            </xpath>

            
          
        </field>
        

        
    </record>


       
</odoo>
