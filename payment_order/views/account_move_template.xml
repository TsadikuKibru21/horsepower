<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_inherit_contract_management" inherit_id="account.report_invoice_document">
        <!-- <xpath expr="//div[@class='row']//div[@class='col-6']" position="inside"> -->
         <xpath expr="//div[@name='invoice_date']" position="inside">
            <div class="row" t-if="o.move_type in ['out_invoice']">
                <div class="col-6">
                    <strong>Invoice Type:</strong>
                    <span t-if="o.invoice_type == 'credit_sales'">Credit Sales</span>
                    <span t-if="o.invoice_type == 'cash_sales'">Cash Sales</span>
                </div>
            </div>
        </xpath>
    </template>
    <record id="view_move_form_inherit_contract_management" model="ir.ui.view">
        <field name="name">account.move.form.inherit.contract_management</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="invoice_type" string="Invoice Type" invisible="move_type != 'out_invoice'"/>
            </xpath>
        </field>
    </record>

</odoo>