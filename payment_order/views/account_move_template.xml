<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_invoice_document_inherit_contract_management" inherit_id="account.report_invoice_document">
        <!-- <xpath expr="//div[@class='row']//div[@class='col-6']" position="inside"> -->
         <xpath expr="//div[@name='invoice_date']" position="inside">
            <div class="row" t-if="o.move_type in ['out_invoice'] and o.invoice_type">
                <div class="col-6">
                    <strong>Invoice Type:</strong>
                    <span t-if="o.invoice_type == 'credit_sales'">Credit Sales</span>
                    <span t-if="o.invoice_type == 'cash_sales'">Cash Sales</span>
                </div>
            </div>

              <div class="row" t-if="o.move_type == 'out_invoice' and o.fs_number">
                <div class="col-6">
                    <strong>FS Number:</strong>
                    <t t-foreach="o.fs_number" t-as="fs">
                        <span><t t-esc="fs.name"/></span>
                    </t>
                </div>
            </div>

            <!-- Add Machine Code -->
            <div class="row" t-if="o.move_type == 'out_invoice' and o.machine_code">
                <div class="col-6">
                    <strong>Machine Code:</strong>
                    <span t-esc="o.machine_code.name"/>
                </div>
            </div>
        </xpath>
    </template>
    <record id="view_move_form_inherit_contract_management" model="ir.ui.view">
        <field name="name">account.move.form.inherit.contract_management</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@id='header_left_group']" position="inside">
                <field name="invoice_type" string="Invoice Type" invisible="move_type != 'out_invoice'"/>
                <field name="fs_number" widget="many2many_tags" invisible="move_type != 'out_invoice'" readonly="state == 'posted'"/>
                <field name="machine_code" readonly="state == 'posted'" invisible="move_type != 'out_invoice'" options="{'no_create': True}"/>
                    
            </xpath>

      
        </field>
    </record>

       <record id="view_account_payment_register_form_inherit" model="ir.ui.view">
            <field name="name">account.payment.register.form.inherit</field>
            <field name="model">account.payment.register</field>
            <field name="inherit_id" ref="account.view_account_payment_register_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group2']/field[@name='communication']" position="after">
                    <field name="payment_code"/>
                    <field name="cheque_no" invisible="payment_code != 'cheque'"/>
                    <field name="cpo_no" invisible="payment_code != 'cpo'"/>

                </xpath>
            </field>
        </record> 

               <record id="inherited_view_account_payment_form" model="ir.ui.view">
            <field name="name">account.payment.form.inherited</field>
            <field name="model">account.payment</field>
            <field name="inherit_id" ref="account.view_account_payment_form"/>
            <field name="arch" type="xml">
                <xpath expr="//group[@name='group2']" position="inside">

                    <field name="payment_code"/>
                    <field name="cheque_no" invisible="payment_code != 'cheque'"/>
                    <field name="cpo_no" invisible="payment_code != 'cpo'"/>

                </xpath>
            </field>
        </record>

</odoo>