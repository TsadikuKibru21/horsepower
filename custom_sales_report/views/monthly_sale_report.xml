<?xml version="1.0" encoding="utf-8"?>
<odoo>


    <data noupdate="1">
         <record id="monthly_sales_report_sequence" model="ir.sequence">
            <field name="name">monthly sales report Sequence</field>
            <field name="code">monthly.sales.report.wizard</field>
            <field name="prefix">QFU/</field>
            <field name="padding">4</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>

    <record id="view_monthly_sales_report_wizard_tree" model="ir.ui.view">
    <field name="name">monthly.sales.report.wizard.tree</field>
    <field name="model">monthly.sales.report.wizard</field>
    <field name="arch" type="xml">
        <tree>
            <field name="name"/>
            <field name="start_date"/>
            <field name="end_date"/>
              <field name="sales_team_ids" widget="many2many_tags"/>
        </tree>
    </field>
</record>
    <record id="view_monthly_sales_report_wizard_form" model="ir.ui.view">
        <field name="name">monthly.sales.report.wizard.form</field>
        <field name="model">monthly.sales.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Sales Report">
                <header>
                    <button name="action_generate_xlsx" string="Generate XLSX" type="object" class="btn-primary"/>

                </header>
                <sheet>
                    <group>
                         <field name="name" readonly="1"/>
                        <field name="start_date"/>
                        <field name="end_date"/>
                        <field name="sales_team_ids" widget="many2many_tags"/>
                    </group>
                   
                </sheet>
           
            </form>
        </field>
    </record>

    <record id="action_monthly_sales_report_wizard" model="ir.actions.act_window">
        <field name="name">Monthly Sales Report</field>
        <field name="res_model">monthly.sales.report.wizard</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_monthly_sales_report"
              name="Monthly Sales Report"
              
              parent="sale.menu_sale_report"
              action="action_monthly_sales_report_wizard"
              sequence="60"/>
</odoo>